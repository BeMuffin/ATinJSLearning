{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "_dist/",
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/cucumber-framework",
            "@types/jest"

        ],
        "target": "es2022",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "*.ts", "config/**/*.ts", "scripts/**/*.ts"],
    "exclude": [
        "node_modules/",
        ".vscode/",
        ".github/",
        "reports/"
    ]

}